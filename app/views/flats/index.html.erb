<p id="notice"><%= notice %></p>

<h1>All our Flats (<%= Flat.count %>) </h1>


<% @flats.each do |flat| %>
  <div class='card'>
      <div>
        <h2><%= flat.name %></h2>
        <p><%= flat.address %></p>
        <td><%= flat.description %></td>
        <td><i class="fa-solid fa-people-group"></i> <%= flat.number_of_guests %></td>
        <td><i class="fa-solid fa-dollar-sign"></i> <%= flat.price_per_night %></td>
      </div>
      <div>
        <td><%= link_to 'More Info', flat %></td>
        <td><%= link_to 'Edit', edit_flat_path(flat) %></td>
        <td><%= link_to 'Remove', flat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </div>
  </div>
<% end %>


<br>

